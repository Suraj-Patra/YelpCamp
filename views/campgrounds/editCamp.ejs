<% layout('layouts/boilerplate') %>

<div class="row">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col-6 offset-3">
		<form
			action="/campgrounds/editCamp/<%= camp._id %>?_method=PUT"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data"
		>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="title"
					value="<%= camp.title %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					id="location"
					name="location"
					value="<%= camp.location %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label"
					>Add More Image(s)...</label
				>
				<input
					class="form-control"
					type="file"
					name="image"
					id="image"
					multiple
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group mb-3">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						id="price"
						class="form-control"
						placeholder="0.00"
						aria-label="price"
						aria-describedby="price-label"
						name="price"
						value="<%= camp.price %>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea
					class="form-control"
					type="text"
					id="description"
					name="description"
					required
				>
        <%= camp.description %></textarea
				>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<%camp.images.forEach((image, i) => {%>
				<img src="<%=image.thumbnail%>" class="img-thumbnail" alt="" />
				<div class="form-check-inline">
					<input
						type="checkbox"
						id="image-<%=i%>"
						name="deleteImages[]"
						value="<%=image.filename%>"
					/>
				</div>
				<label for="image-<%=i%>">Delete?</label>
				<%})%>
			</div>
			<button type="submit" class="btn btn-success mb-3">Update</button>
		</form>
		<a href="/campgrounds/oneCamp/<%= camp._id %>">Back To Camp</a>
	</div>
</div>
1
