<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div class="mb-3">
	<a href="/campgrounds/newCamp">Add campground</a>
</div>
<% for( let camp of camps ) { %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= camp.image %>" class="img-fluid" />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= camp.title %></h5>
				<p class="card-text"><%= camp.description %></p>
				<p class="card-text">
					<small class="text-dark-emphasis"
						><%= camp.location %>
					</small>
				</p>
				<a
					href="/campgrounds/oneCamp/<%=camp._id%>"
					class="btn btn-primary"
					><%= camp.title %></a
				>
			</div>
		</div>
	</div>
</div>
<% } %>
