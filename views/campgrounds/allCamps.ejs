<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div class="mb-3">
	<a href="/campgrounds/newCamp">Add campground</a>
</div>
<% for( let camp of camps ) { %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<% if (camp.images.length) { %>
			<img
				crossorigin="anonymous"
				class="img-fluid"
				alt=""
				src="<%= camp?.images[0]?.url %>"
			/>
			<% } else { %>
			<img
				crossorigin="anonymous"
				class="img-fluid"
				alt=""
				src="https://res.cloudinary.com/dl5dlqqco/image/upload/v1697028004/YelpCamp/ols7hsgnir71jzbxgpn8.png"
			/>
			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= camp.title %></h5>
				<p class="card-text"><%= camp.description %></p>
				<p class="card-text">
					<small class="text-dark-emphasis"
						><%= camp.location %>
					</small>
				</p>
				<a
					href="/campgrounds/oneCamp/<%=camp._id%>"
					class="btn btn-primary"
					><%= camp.title %></a
				>
			</div>
		</div>
	</div>
</div>
<% } %>
