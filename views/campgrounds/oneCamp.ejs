<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= camp.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-secondary"><%= camp.location %></li>
        <li class="list-group-item">$<%= camp.price %></li>
      </ul>
      <div class="card-body">
        <a
          href="/campgrounds/editCamp/<%= camp._id %>"
          class="card-link btn btn-warning"
          >Edit Camp</a
        >
        <form
          action="/campgrounds/deleteCamp/<%= camp._id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete Camp</button>
        </form>
      </div>
    </div>
  </div>
</div>
